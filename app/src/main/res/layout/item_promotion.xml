<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <!-- รูปโปรโมชั่น (ลบ android:src ออก) -->
    <ImageView
        android:id="@+id/ivPromotionImage"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:scaleType="centerCrop"
        android:contentDescription="Promotion Image"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- ชื่อโปรโมชั่น -->
    <TextView
        android:id="@+id/tvPromotionName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="โปรโมชั่น"
        android:textStyle="bold"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/ivPromotionImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- รายละเอียดโปรโมชั่น หรือข้อความอื่นๆ -->
    <TextView
        android:id="@+id/tvPromotionPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="รายละเอียด"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/tvPromotionName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
